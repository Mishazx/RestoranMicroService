{
  "compilerOptions": {
    "lib": ["es2016", "dom"],
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "emitDeclarationOnly": false,
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "vite.config.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
